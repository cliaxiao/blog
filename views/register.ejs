<% include header.ejs %>
	<form class="form-horizontal" method="post" />
	<fieldset>
		<legend>用户注册</legend>
		<div class="form-group">
			<label class="col-sm-1 control-label" for="username">用户名：</label>
			<div class="col-sm-2">
				<input type="text" class="form-control" id="username" name="username" placeholder="输入用户名">
			</div>
			
		</div>
		<div class="form-group">
			<label class="col-sm-1 control-label" for="password">密码：</label>
			<div class="col-sm-2">
				<input type="password" class="form-control" id="password" name="password">
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-1 control-label" for="password">确认密码：</label>
			<div class="col-sm-2">
				<input type="password" class="form-control" id="password-confirm" name="password-confirm">
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-1 control-label" for="password">邮箱：</label>
			<div class="col-sm-2">
				<input type="email" class="form-control" id="email" name="email">
			</div>
		</div>
		<div class="form-actions">
			<button type="submit" class="btn btn-primary">确定</button>
		</div>
	</fieldset>
<% include footer.ejs %>