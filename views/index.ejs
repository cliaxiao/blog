          <article>
            <header>
              <h2>
                <a href="#"><%= post.title %></a>
              <h2>
            </header>
          <div>
            <p><%= post.post %></p>
            <a href="#">继续阅读</a>
          </div>
          <footer>
            <span>
                日期：<time class="" datatime=<%= post.time.day %>><%= post.time.day %></time>
            </span>
            <span>作者：<%= post.username %></span>
          </footer>
        </article>
        <% }) %> 
  		</main>
  	</div>
